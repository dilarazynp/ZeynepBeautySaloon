@model ZeynepBeautySaloon.Models.Randevu

@{
    ViewData["Title"] = "Randevu Oluştur";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="PersonelId">Personel Seçin:</label>
        <select asp-for="PersonelId" class="form-control" asp-items="@(new SelectList(ViewBag.PersonelListesi, "Id", "AdSoyad"))">
            <option value="">Personel Seçin</option>
        </select>
        <span asp-validation-for="PersonelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Tarih">Randevu Tarihi:</label>
        <input type="date" asp-for="Tarih" class="form-control" />
        <span asp-validation-for="Tarih" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Saat">Randevu Saati:</label>
        <input type="time" asp-for="Saat" class="form-control" />
        <span asp-validation-for="Saat" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="IslemId">İşlem Seçin:</label>
        <select asp-for="IslemId" class="form-control" asp-items="@(new SelectList(ViewBag.IslemListesi, "Id", "IslemAdi"))">
            <option value="">İşlem Seçin</option>
        </select>
        <span asp-validation-for="IslemId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Ucret">İşlem Ücreti:</label>
        <input type="number" asp-for="Ucret" class="form-control" step="0.01" min="0" />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Sure">İşlem Süresi:</label>
        <input type="number" asp-for="Sure" class="form-control" />
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Randevu Oluştur</button>
</form>

<div id="errorMessage" style="display:none; color:red;"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Personel ve tarih seçimi sonrası kontrol
            $('form').on('change', '#PersonelId, #Tarih, #Saat', function () {
                var personelId = $('#PersonelId').val();
                var tarih = $('#Tarih').val();
                var saat = $('#Saat').val();
                if (personelId && tarih && saat) {
                    checkIfAvailable(personelId, tarih, saat);
                }
            });

            function checkIfAvailable(personelId, tarih, saat) {
                $.ajax({
                    url: '@Url.Action("CheckAvailability", "Randevu")',
                    type: 'GET',
                    data: { personelId: personelId, tarih: tarih, saat: saat },
                    success: function (data) {
                        if (data.isAvailable) {
                            $('#errorMessage').hide();
                        } else {
                            $('#errorMessage').text("Bu zaman diliminde personeliniz başka bir randevu aldı.").show();
                        }
                    }
                });
            }
        });
    </script>
}
