@model IEnumerable<ZeynepBeautySaloon.Models.Personel>

@{
    ViewData["Title"] = "Personel Listesi";
}

<h2 class="text-center">@ViewData["Title"]</h2>

@if (TempData["msj"] != null)
{
    <div class="alert alert-info text-center">@TempData["msj"]</div>
}

@if (User.IsInRole("Admin"))
{
    <div class="text-center mb-3">
        <a asp-action="Create" class="btn btn-success">Yeni Personel Ekle</a>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="@item.FotografUrl" class="card-img-top" alt="@item.Ad @item.Soyad">
                <div class="card-body">
                    <h5 class="card-title">@item.Ad @item.Soyad</h5>
                    <p class="card-text">
                        Uzmanlık: @item.Uzmanlik<br>
                        Müsaitlik Durumu: @Html.DisplayFor(modelItem => item.MusaitlikDurumu)<br>
                        Cinsiyet: @item.Cinsiyet
                    </p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detaylar</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>