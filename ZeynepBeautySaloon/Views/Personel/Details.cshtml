@model ZeynepBeautySaloon.Models.Personel

@{
    ViewData["Title"] = "Personel Detayları";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="card mb-4">
    <img src="@Model.FotografUrl" class="card-img-top" alt="@Model.Ad @Model.Soyad">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Ad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Ad)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Soyad)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Soyad)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Uzmanlik)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Uzmanlik)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.MusaitlikDurumu)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MusaitlikDurumu)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Cinsiyet)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Cinsiyet)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FotografUrl)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FotografUrl)
            </dd>
        </dl>
    </div>
</div>

<div class="text-center">
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Düzenle</a>
        <text> | </text>
    }
    <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
</div>