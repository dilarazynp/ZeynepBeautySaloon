@model IEnumerable<ZeynepBeautySaloon.Models.Randevu>

<h2>Randevular (Admin Kontrolü)</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<table class="table">
    <thead>
        <tr>
            <th>Tarih</th>
            <th>Saat</th>
            <th>İşlem</th>
            <th>Personel</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var randevu in Model)
        {
            <tr>
                <td>@randevu.Tarih.ToString("dd/MM/yyyy")</td>
                <td>@randevu.Saat</td>
                <td>@randevu.Islem?.IslemAdi</td>
                <td>@randevu.Personel?.Ad</td>
                <td>
                    <a asp-action="Onayla" asp-route-id="@randevu.Id" class="btn btn-success">Onayla</a>
                    <a asp-action="CancelAdmin" asp-route-id="@randevu.Id" class="btn btn-danger">İptal Et</a>
                </td>
            </tr>
        }
    </tbody>
</table>