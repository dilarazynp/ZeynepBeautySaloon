@model ZeynepBeautySaloon.Models.Islemler

<h1>İşlem Düzenle</h1>

<form method="post">
    <div class="form-group">
        <label for="IslemAdi">İşlem Adı</label>
        <input asp-for="IslemAdi" class="form-control" required />
        <span asp-validation-for="IslemAdi" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Sure">Süre (Dakika)</label>
        <input asp-for="Sure" class="form-control" required />
        <span asp-validation-for="Sure" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Ucret">Ücret</label>
        <input asp-for="Ucret" class="form-control" required />
        <span asp-validation-for="Ucret" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="PersonelId">Personel</label>
        @Html.DropDownListFor(m => m.PersonelId, (SelectList)ViewBag.PersonelId, "Personel Seçin", new { @class = "form-control" })
        <span asp-validation-for="PersonelId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a href="@Url.Action("Index", "Islemler")" class="btn btn-secondary">İptal</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
