@model IEnumerable<ZeynepBeautySaloon.Models.Islemler>

@{
    ViewData["Title"] = "İşlemler";
}

<h2>İşlemler</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Yeni İşlem Ekle</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>İşlem Adı</th>
            <th>Personel</th>
            <th>Fiyat</th>
            <th>Süre</th>
            @if (User.IsInRole("Admin"))
            {
                <th>İşlemler</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.IslemAdi</td>
                <td>@item.Personel?.Ad</td>
                <td>@item.Ucret</td>
                <td>@item.Sure</td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Düzenle</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
