@model IEnumerable<ZeynepBeautySaloon.Models.Islemler>

@{
    ViewData["Title"] = "Hizmetlerimiz";
}

<h2 class="text-center">@ViewData["Title"]</h2>

@if (TempData["msj"] != null)
{
    <div class="alert alert-info text-center">@TempData["msj"]</div>
}

@if (User.IsInRole("Admin"))
{
    <div class="text-center mb-3">
        <a asp-action="Create" class="btn btn-success">Yeni Hizmet Ekle</a>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.IslemAdi</h5>
                    <p class="card-text">
                        Süre: @item.Sure dakika<br>
                        Ücret: @item.Ucret ₺<br>
                        Personel: @(item.Personel != null ? item.Personel.Ad : "Atanmamış")
                    </p>
                    <div class="d-flex justify-content-between">
                        <a asp-action="IslemDetay" asp-route-id="@item.Id" class="btn btn-info">Detaylar</a>
                        @if (User.IsInRole("Admin"))
                        {
                            <div>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>